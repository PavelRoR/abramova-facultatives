PH = 'Philosopher', serif
RO = 'RussoOne', sans-serif

@font-face {
	font-family: 'RussoOne';
	src: url('../fonts/RussoOne.eot');
	src: url('../fonts/RussoOne.eot') format('embedded-opentype'),
		 url('../fonts/RussoOne.woff2') format('woff2'),
		 url('../fonts/RussoOne.woff') format('woff'),
		 url('../fonts/RussoOne.ttf') format('truetype'),
		 url('../fonts/RussoOne.svg#RussoOne') format('svg');
	font-display: fallback;
	font-weight: bold;
	font-style: normal;
}
@font-face {
	font-family: 'Philosopher';
	src: url('../fonts/Philosopher.eot');
	src: url('../fonts/Philosopher.eot') format('embedded-opentype'),
		 url('../fonts/Philosopher.woff2') format('woff2'),
		 url('../fonts/Philosopher.woff') format('woff'),
		 url('../fonts/Philosopher.ttf') format('truetype'),
		 url('../fonts/Philosopher.svg#Philosopher') format('svg');
	font-display: fallback;
	font-weight: normal
	font-style: normal;
}

@import '../css/_css/bootstrap.min.css'
@import '../css/_css/jquery.fancybox.min.css'

*
	margin 0
	padding 0
	outline none
body
	font-family: PH
	font-size: 20px
	background-color #fff
	color #000
a
	color: #fefefe
	&:focus
		outline: 0
	&:hover
		text-decoration none
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.video-wrapper
	margin 0 auto
	position relative
	width 100%
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #000
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
.button
	display block
	border: 2px solid
	font-size: 24px;
	color: rgb(138, 54, 52);
	background-color: rgb(246, 196, 98);
	width 100%
	max-width: 280px;
	height: 52px;
	line-height: 48px;
	text-align: center
	transition: all .3s ease 
	text-decoration: none
	margin 0 auto
	&:focus
		text-decoration: none
		color rgb(138, 54, 52);
		background-color: rgb(246, 196, 98);
	&:hover
		text-decoration: none
		color: rgb(246, 196, 98);
		background-color: rgb(138, 54, 52);
.general-title
	font-size: 30px;
	font-family: RO
	color: rgb(138, 54, 52);
	line-height: 1;
	text-align: center;
	position relative
	span
		display block
		width 100%
		max-width 738px
		height 46px
		margin 5px auto 30px
		background-image url(../img/icons/main-img.png)
		background-repeat no-repeat
		background-position: center
		background-size contain
		position relative
		opacity .3
		&:before
		&:after
			content: ''
			display block
			position: absolute
			bottom: 22px
			background-color: #3A210D
			height 2px
			left 0
			opacity .9
			// width calc((100% - 90px)/2)
			width calc(50% - 45px)
		&:after
			left auto
			right 0
.general-list
	margin: 0 auto 45px
	li
		position relative
		list-style none
		margin-bottom:  20px
		padding-left: 15px
		&:before
			content: ''
			display: block
			position: absolute
			top 12px
			left 0
			width 5px
			height 5px
			border-radius: 20px
			background-color: #A03331
		&:last-child
			margin-bottom: 0

