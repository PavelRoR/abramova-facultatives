@media screen and (min-width 2295px)
	body
		font-size: 20px
	.container
		width 1400px
	#main
		background-position: center top
	.main-title-container
		padding 60px 0
		margin-bottom: 60px
	.main-title
		margin 30px 0 40px
	.general-list
		max-width 1060px
@media screen and (max-width 1199px)
	.facultative-img
	#janna
		width 290px
		height 290px
@media screen and (max-width 991px)
	#logo
		float: none
		margin 0 auto 5px
	.contacts
		text-align: center
		float: none
	.contact
		display: inline-block
		margin 5px 5px 0
		.fa
			margin 0 5px
	.facultative:nth-child(2n)
		text-align: left 
	.facultative-list-2 li
		padding 0 0 0 15px
		&:before
			right auto
			left 0
	.certs
		width 100%
		max-width 400px
		margin 0 auto 35px
	.carousel-inner
		max-width 550px
	.modal-dialog
		width 96%
		margin 10px auto
@media screen and (max-width 767px)
	header
		padding 10px 0
		margin-bottom: 30px
	.facultatives-table
	.facultatives-table-row
	.facultatives-table-col:first-of-type
	.facultatives-table-col:last-of-type
		text-align: center
		display block
		width 100%
	.facultatives-table
		max-width 480px
	.controls
		position relative
		width 97%
		margin 0 auto
	.carousel-control
		top auto
		bottom -15px
	.carousel-inner
		max-width 100%
	.button-revs
		margin-top: 60px
@media screen and (max-width 485px)
	header
		margin-bottom 15px
	#main
	#revs
		padding-bottom: 40px
	.main-title-container
		padding 30px 0
	#psy
		width 60px
		height 60px
	.main-title
		font-size: 32px
		margin 10px 0 15px
	.main-subtitle
		font-size: 22px
	#for
	.facultative
	#facultatives-costs
	#author
		padding 40px 0
	.general-title
		font-size: 24px
		line-height: 1.2
		margin-bottom: 25px
	.general-list
		margin-bottom: 30px
		li
			margin-bottom: 10px
	footer
		padding 10px 0
		h5
			font-size: 18px
	.soc-buttons a
		margin 10px 5px
	footer .conditions, footer p
		font-size: 12px
@media screen and (max-width 385px)
	.main-title-container
		padding 20px 0
		margin-bottom: 30px
	.main-title
		font-size: 26px
		margin 5px 0 10px
	.main-subtitle
		font-size: 18px
	#main
	#revs
		padding-bottom: 30px
	#for
	.facultative
	#facultatives-costs
	#author
		padding 30px 0
	#janna, .facultative-img
		width 250px
		height 250px
	.facultative-title
		font-size: 21px
	.facultative-text
		font-size: 18px
	.general-list
		margin-bottom: 20px
	.facultatives-table-col
		padding 15px
	.facultatives-table-title
		font-size: 20px
	.button-revs
		margin-top: 55px