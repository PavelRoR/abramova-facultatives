@media screen and (max-width 991px)
	header
		padding 15px 0
	#logo
		float: none
		margin 0 auto 5px
	.contacts
		text-align: center
		float: none
	.contact
		display: inline-block
		margin 5px 5px 0
	#main
	.main-title-container
	#facultatives-costs
	#revs
		padding 60px 0
	.facultative-text
		margin-top: 35px
	.certs
		width 100%
		max-width 400px
		margin 0 auto 35px
	#revs
		padding-top: 0
	.carousel-inner
		max-width 550px
	.modal-dialog
		width 96%
		margin 10px auto
@media screen and (max-width 767px)
	.facultatives-table
	.facultatives-table-row
	.facultatives-table-col:first-of-type
	.facultatives-table-col:last-of-type
		text-align: center
		display block
		width 100%
	.facultatives-table-row
		padding 20px
	.facultatives-table-title
		margin-bottom: 5px
	.facultatives-table-cost
		margin-top: 20px
	.facultatives-table-cost span
		margin 5px 0
	.facultatives-table
		max-width 480px
	.controls
		position relative
		width 97%
		margin 0 auto
	.carousel-control
		top auto
		bottom -35px
	.carousel-inner
		max-width 100%
	#text-revs
		margin: 60px 0 80px
	// .button-revs
	// 	margin-top: 60px
@media screen and (max-width 485px)
	header
		padding 10px 0
	#logo
		width 160px
		height 15px
	.contact
		font-size: 12px
		background-size: 12px
		padding-left: 15px
	#main
	.main-title-container
	#for
	.facultative
	#facultatives-costs
	#author
		padding 40px 0
	#revs
		padding-bottom: 40px
	.main-title-container
		margin-bottom: 30px
	.main-title
		font-size: 28px
	.main-subtitle
		font-size: 22px
	.facultative-text
		margin-bottom: 15px
	.general-title
		font-size: 24px
		line-height: 1.2
		margin-bottom: 25px
	.general-list
		margin-bottom: 30px
		li
			margin-bottom: 10px
	.carousel-indicators
		li
			margin 0 2px
		.active
			margin 0 2px
	.carousel-control
		width 40px
		height 40px
		font-size: 32px
		bottom: -10px
	.carousel-inner .item
		padding 7px
	#text-revs
		margin 30px 0 50px
	footer
		padding 10px 0
		h5
			font-size: 18px
	.soc-buttons a
		margin 10px 5px
	footer .conditions, footer p
		font-size: 12px
@media screen and (max-width 385px)
	.main-title-container
		padding 20px 0
		margin-bottom: 30px
	.main-title
		font-size: 24px
		line-height: 1.3
	.main-subtitle
		font-size: 18px
	#main
	.main-title-container
	#for
	.facultative
	#facultatives-costs
	#author
		padding 30px 0
	#revs
		padding-bottom: 30px
	.general-title
		font-size: 22px
		span
			margin-bottom: 20px
	#janna, .facultative-img
		width 220px
		height 220px
	.facultative-text
		font-size: 22px
		margin-top: 20px
	.facultative-subtitle
		margin 10px 0
	.general-list
		margin-bottom: 20px
	.facultatives-table-row
		padding 15px
	.facultatives-table-title
		font-size: 20px
	.button-revs
		margin-top: 55px
	.modal-body-title
		font-size: 20px
		margin-bottom: 0
	.cert-link
		margin 0 auto